<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.anton.testapp.SubActivities.RestInfoLocationActivity">


    <com.google.android.gms.maps.MapView
        android:id = "@+id/activity_rest_info_mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryWhite">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/rest_info_location_back"
            android:id="@+id/activity_rest_info_location_back"
            android:layout_gravity="left|center_vertical"
            android:textColor="@color/colorPrimaryRed"
            android:layout_marginLeft="10dp"
            android:onClick="onBack"
            android:textSize="@dimen/smiddle_textsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/rest_info_location_title"
            android:id="@+id/activity_rest_info_location_title"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryBlack"
            android:textSize="@dimen/smiddle_textsize" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView4"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/colorPrimaryGrey"></LinearLayout>
    </FrameLayout>

</FrameLayout>
