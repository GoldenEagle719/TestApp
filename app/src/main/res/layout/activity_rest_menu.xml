<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.anton.testapp.SubActivities.RestMenuActivity"
    android:orientation="vertical">

    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/back"
        android:id="@+id/activity_rest_menu_btn_back"
        android:textColor="@color/colorPrimaryRed"
        android:layout_margin="10dp"
        android:layout_gravity="left|center_vertical"
        android:onClick="onBack"
        android:textSize="@dimen/smiddle_textsize" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/rest_menu_detail_title"
        android:id="@+id/activity_rest_menu_label_title"
        android:textColor="@color/colorPrimaryBlack"
        android:layout_gravity="center"
        android:textSize="@dimen/smiddle_textsize" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimaryGrey"></LinearLayout>
</FrameLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_rest_menu_listview" />
</LinearLayout>
